@model User
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class=".container-sm mt-5">
    <div class="row justify-content-center">
        <div class="col-4 bg-white border  p-3" style="border-radius:6px">
            <div class="d-flex mt-3">
                <div  ><b> Đăng nhập tài khoản</b></div>
                <div style="margin-left:auto"><a style="text-decoration: none; color: inherit;" href="/Home/Index"><i class="fa-regular fa-circle-xmark  "></i></a></div>
            </div>
            <hr/>
            <div class=" d-flex justify-content-center align-items-center">
            <img src="~/img/review3.jpg"  />
            </div>
            <div >
                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div >
                        <input type="text" asp-for="username" class="w-100 mb-3"  style="padding:8px 12px ;border:1px solid rgba(0, 0, 0, .2); border-radius:8px"  placeholder="Tên tài khoản">
                        <input type="text" asp-for="password" class="w-100 mb-3" type="text"  style="padding:8px 12px;border:1px solid rgba(0, 0, 0, .2); border-radius:8px"  placeholder="Mật khẩu">
                        <button type="submit" class="w-100 mb-3" style="background-color:#0B78E2; color:#ffffff; border:none; padding: 8px 16px; border-radius:8px">Đăng nhập</button>
                    </div>
                </form>
            </div>
            <div class=" d-flex justify-content-center align-items-center">
                <p>Bạn chưa có tài khoản? <a style="text-decoration: none" href="/Auth/Register">Đăng kí</a></p>
            </div>
        <div>
    </div>
</div>